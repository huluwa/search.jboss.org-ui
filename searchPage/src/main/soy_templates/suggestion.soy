{namespace org.jboss.search.suggestions.templates}

/**
 * Search suggestion section DIV.
 *
 * @param caption
 * @param options
 * @param indexStart starting number of index
 */
{template .suggestions_section}
    <div class="suggestions_section">
        {foreach $option in $options}
        <div class="selectable" index="{$indexStart + index($option)}">
            {if isFirst($option)}
            <div class="caption">{$caption}</div>
            {/if}
            <div class="option">{$option|noAutoescape}</div>
        </div>
        {/foreach}
        <div class="suggestion_section_last"></div>
    </div>
{/template}
